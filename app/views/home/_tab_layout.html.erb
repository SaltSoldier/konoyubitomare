<div>
  <ul class="nav nav-tabs" role="tablist">
    <li class="active" role="presentation">
      <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">全体</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">企画</a>
    </li>
    <li role="presentation">
      <a aria-controls="tab_c" data-toggle="tab" href="#tab_c" role="tab">スキル</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab_a" role="tabpanel">
      <p>
        <% @projects.each do |project| %>
          <p>
            <strong>ユーザ名</strong><br>
            <%= @user.find(project.user_id).username %><br>
            <strong>投稿ジャンル</strong><br>
            <%= project.posting_genre_i18n %><br>
            <strong>投稿タイトル</strong><br>
            <%= project.title %><br>
            <strong>投稿内容</strong><br>
            <%= simple_format(project.description) %><br>
          </p>
          <hr>
        <% end %>
      </p>
    </div>
    <div class="tab-pane" id="tab_b" role="tabpanel">
      <p>
        <% @projects.each do |project| %>
          <% if project.posting_genre == "planning" then %>
            <p>
              <strong>ユーザ名</strong><br>
